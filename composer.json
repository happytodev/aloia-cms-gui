{
    "name": "roelofjan-elsinga/flat-file-cms-gui",
    "description": "The GUI for the roelofjan-elsinga/flat-file-cms package",
    "keywords": [
        "laravel",
        "cms",
        "file",
        "user interface"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Roelof Jan Elsinga",
            "email": "roelofjanelsinga@gmail.com"
        }
    ],
    "scripts": {
        "post-install-cmd": "vendor/bin/cghooks add --ignore-lock",
        "post-update-cmd": "vendor/bin/cghooks update"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "FlatFileCms\\GUI\\": "src/",
            "FlatFileCms\\GUI\\Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "echo committing as $(git config user.name)",
                "./vendor/bin/php-cs-fixer fix . --rules=@PSR2",
                "git add"
            ],
            "pre-push": [
                "./vendor/bin/php-cs-fixer fix --dry-run . --rules=@PSR2"
            ],
            "post-merge": "composer install"
        },
        "laravel": {
            "providers": [
                "FlatFileCms\\GUI\\FlatFileCmsServiceProvider"
            ]
        }
    },
    "require": {
        "php": ">=7.1.3",
        "roelofjan-elsinga/flat-file-cms": "^0.12.0",
        "illuminate/support": "^5.8",
        "illuminate/view": "^5.8",
        "gumlet/php-image-resize": "^1.9",
        "illuminate/http": "^5.8",
        "rbdwllr/reallysimplejwt": "^2.0",
        "genealabs/laravel-caffeine": "^0.8.3",
        "roelofjan-elsinga/flat-file-cms-publish": "^0.2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "mikey179/vfsstream": "^1.6",
        "orchestra/testbench": "^3.8",
        "friendsofphp/php-cs-fixer": "^2.15",
        "brainmaestro/composer-git-hooks": "^2.7"
    }
}
